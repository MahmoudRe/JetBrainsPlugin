<idea-plugin>
    <id>com.your.company.my_gradle_plugin</id>
    <name>Method inspector</name>
    <vendor email="b.c.slager@student.tudelft.nl" url="https://github.com/MahmoudRe/JetBrainsPlugin">MahmoudRe</vendor>

    <description><![CDATA[
    This plugin will analyze the methods in your class.<br>
    ]]></description>

    <change-notes>Very first release of the plugin. It features basic method analysis</change-notes>

    <version>1.0</version>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <depends>org.jetbrains.kotlin</depends>

    <actions>
        <action id="MethodInspector" class="MethodInspector" text="Method Inspector" description="Analyzes class methods">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="MethodInspectorJ" class="MethodInspectorJ" text="Method Inspector Java" description="Analyzes class methods">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="MethodInspectorK" class="MethodInspectorK" text="Method Inspector Kotlin"
                description="Method inspector for Kotlin files">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>